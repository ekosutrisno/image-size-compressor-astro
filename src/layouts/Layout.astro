---
import '../styles/global.css'

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/file.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Mengecilkan ukuran foto atau gambar favorit kamu sebelum diunggah ke sosial media." />
    <meta name="keywords" content="Gambar, Ukuran, Online, Sosial Media">
    <title>{title}</title>

    <meta property="og:type" content="website" />
    <meta property="og:title" content="Kompres File Gambar Favoritmu Secara Online & Gratis" />
    <meta property="og:description" content="Mengecilkan ukuran foto atau gambar favorit kamu sebelum diunggah ke sosial media" />
    <meta property="og:url" content="https://imagecompress.vercel.app/" />
    <meta property="og:image" content="https://github.com/ekosutrisno/image-size-compressor-astro/raw/main/public/img/home_page.png" />
    <meta property="og:image:alt" content="Kompres File Gambar Favoritmu Secara Online & Gratis" />
    <meta property="og:image:width" content="300" />
    <meta property="og:image:height" content="250" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@eko_sutrisno96" />
    <meta name="twitter:creator" content="@eko_sutrisno96" />
    <meta name="twitter:title" content="Kompres File Gambar Favoritmu Secara Online & Gratis" />
    <meta name="twitter:description" content="Mengecilkan ukuran foto atau gambar favorit kamu sebelum diunggah ke sosial media" />
    <meta name="twitter:image" content="https://github.com/ekosutrisno/image-size-compressor-astro/raw/main/public/img/home_page.png" />
    <meta name="twitter:image:alt" content="Kompres File Gambar Favoritmu Secara Online & Gratis" />
  </head>
  <body>
    <main class="cover-gradient">
      <slot />
    </main>
  </body>
</html>
